    ul
        li str1) 1 lag 7 - 8 pers kr 275
        li str2) 1 lag 10 - 12 pers kr 390            
        li str3) 2 lag 16 pers kr 480
        li str4) 2 lag 20 pers kr 560
        li str5) 2 lag 24 pers kr 630            
        li str6) 2 lag 30-35 pers kr 990
